<table class="table table-bordered">
    <tr>
        <th>Figure List</th>
        <th>
            <a href="/figure/add" class="btn btn-warning">Add</a>
        </th>
        <th>
            <form action="figure/search" method="post">
                <input type="search" name="title" placeholder="Search by name" class="form-control" required>
            </form>
        </th>
        
    </tr>
    <tr>
        <th>Image</th>
        <th>Name</th>
        <th>Origin</th>
        <th>Size</th>
        <th>Manufactur Date</th>
        <th>Price</th>
    </tr>

    {{#each figures }}
    <tr>
        <th><img src="{{image}}" alt="" width="200" height="200"></th>
        <th>{{name}}</th>
        <th>{{origin}}</th>
        <th>{{size}}</th>
        <th>{{manufacturDate}}</th>
        <th>
            <a href="/figure/edit/{{_id}}" class="btn btn-warning">Edit</a>
            <a href="/figure/delete/{{_id}}" class="btn btn-warning">Delete</a>
        </th>
    </tr>
    {{/each}}

</table>