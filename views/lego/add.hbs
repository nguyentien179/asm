<div class="container text-center mt-3 mb-3 col-md8">
    <form class="card bg-light ml-3 mr-3" action="/lego/add" method="post">
        <h1 class="text text-primary">Add new lego</h1>
        <div class="form-group">
            <label for="">Image</label>
            <input class="form-control" type="text" name="image" required>
        </div>
        <div class="form-group">
            <label for="">Name</label>
            <input class="form-control" type="text" name="name" required>
        </div>
        <div class="form-group">
            <label for="">Manufactur Date</label>
            <input class="form-control" type="number" name="manufacturDate" required>
        </div>
        <div class="form-group">
            <label for="">Price</label>
            <input class="form-control" type="number" name="price" required>
        </div>
        
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Add">
        </div>
    </form>
</div>