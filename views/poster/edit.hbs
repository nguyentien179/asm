<div class="container text-center mt-3 mb-3 col-md8">
    <form class="card bg-light ml-3 mr-3" action="/poster/edit/{{poster._id}}" method="post">
        <h1 class="text text-primary">Edit Poster</h1>
        <div class="form-group">
            <label for="">Image</label>
            <input class="form-control" type="text" name="image" value={{poster.image}} required>
        </div>
        <div class="form-group">
            <label for="">Name</label>
            <input class="form-control" type="text" name="name" value={{poster.name}} required>
        </div>
        <div class="form-group">
            <label for="">Origin</label>
            <input class="form-control" type="text" name="origin" value={{poster.origin}} required >
        </div>
        <div class="form-group">
            <label for="">Size</label>
            <input class="form-control" type="number" name="size" value={{poster.size}} required >
        </div>
        <div class="form-group">
            <label for="">Manufactur Date</label>
            <input class="form-control" type="number" name="manufacturDate" value={{poster.manufacturDate}} required>
        </div>
        <div class="form-group">
            <label for="">Price</label>
            <input class="form-control" type="number" name="price" value={{poster.price}} required>
        </div>
        
        <div class="form-group">
            <input type="submit" class="btn btn-danger" value="Edit">
        </div>
    </form>
</div>